{% extends 'job.base' %}

{% import 'components.widgets' as widgets %}
{% block title %}Podgląd{{ parent() }}{% endblock %}

{% block container %}
    <div class="row">
        <main class="col-lg-9 col-12-md">
            {% include 'job.submit.partials.indicator' with {'current': 3} %}

            <div class="panel panel-default">
                <div class="panel-heading">
                    Podgląd
                </div>
                <div class="panel-body">
                    {% include 'job.partials.offer' with {'preview': true} %}
                </div>
            </div>

            {{ form_open({'url': route('job.submit.save'), 'class': 'submit-form'}) }}
            <div class="panel panel-default">
                <div class="panel-body">
                    <div id="form-navigation" class="form-group">
                        <a href="{{ route('job.submit.firm') }}" class="btn btn-default pull-left"><i class="fa fa-angle-left"></i> Informacje o firmie</a>
                        <button type="submit" class="btn btn-primary pull-right" data-submit-state="Zapisywanie...">Opublikuj <i class="fa fa-angle-right"></i></button>
                    </div>
                </div>
            </div>
            {{ form_close() }}
        </main>

        <aside class="col-lg-3 hidden-md hidden-sm hidden-xs">

        </aside>
    </div>
{% endblock %}

{% block body %}
    {{ parent() }}

    <script>
        var data = {
            firm: {{ firm|raw }}
        };
    </script>

    {{ widgets.vue() }}
    <script src="//cdn.tinymce.com/4/tinymce.min.js"></script>
    <script src="//maps.googleapis.com/maps/api/js?key={{ config('services.google-maps.key') }}&sensor=false"></script>
    <script src="{{ cdn('js/job-submit.js') }}"></script>

    {% include 'job.submit.partials.navigation' %}
    {% include 'job.submit.partials.chat' %}
{% endblock %}
