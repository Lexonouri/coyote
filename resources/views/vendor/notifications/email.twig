{% extends 'emails.layout' %}

{% block container %}
    <!-- Greeting -->
    <h1 class="greeting">
        {% if greeting %}
            {{ greeting }}
        {% elseif level == 'error' %}
            Whoops!
        {% else %}
            Witaj!
        {% endif %}
    </h1>

    <!-- Intro -->
    {% for line in introLines %}
        <p class="paragraph">{{ line|raw }}</p>
    {% endfor %}

    <!-- Action Button -->
    {% if actionText %}
        <table class="action" align="center" width="100%" cellpadding="0" cellspacing="0">
            <tr>
                <td align="center">
                    <a href="{{ actionUrl }}" class="button {{ level }}" style="color: #fff" target="_blank">
                        {{ actionText }}
                    </a>
                </td>
            </tr>
        </table>
    {% endif %}

    <!-- Outro -->
    {% for line in outroLines %}
        <p class="paragraph">
            {{ line|raw }}
        </p>
    {% endfor %}

    <!-- Salutation -->
    <p class="paragraph">Z poważaniem,<br>{{ config('app.name') }}</p>

    <!-- Sub Copy -->
    {% if actionText %}
        <table style="margin-top: 25px; padding-top: 25px; border-top: 1px solid #EDEFF2;">
            <tr>
                <td>
                    <p class="paragraph-sub">
                        Jeżeli masz problemy z kliknięciem na przycisk "{{ actionText }}",
                        skopiuj i wklej poniższy link w przeglądarce:
                    </p>

                    <p class="paragraph-sub">
                        <a href="{{ actionUrl }}" target="_blank">
                            {{ actionUrl }}
                        </a>
                    </p>
                </td>
            </tr>
        </table>
    {% endif %}
{% endblock %}

{% block footnote %}
{% endblock %}
