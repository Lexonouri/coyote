{% extends 'layout' %}

{% import 'components.forms' as forms %}

{% block container %}
    {{ include('user.top', {active: 'settings'}) }}

    <div class="row">
        <menu class="col-md-2">
            <ul class="side-menu">
                {% for item in side_menu.roots() %}
                    <li {{ forms.attr(item.attr) }}>
                        <a href="{{ item.url }}">{{ item.title|raw }}</a>
                    </li>
                {% endfor %}
            </ul>
        </menu>

        <main class="col-md-10">
            {% if errors.any %}
                <div class="alert alert-danger">
                    Formularz zawiera błędy. Sprawdź poprawność wprowadzonych danych i spróbuj ponownie.
                </div>
            {% endif %}

            {% if not user('is_confirm') %}
                <p class="alert alert-warning">
                    Twój adres e-mail <strong>nie został potwierdzony</strong>. Nie będziesz dostawał żadnych powiadomień na email.
                    Nie będziemy mogli również wygenerować Ci nowego hasła.<br>

                    <a class="alert-link" href="{{ url('Confirm') }}">Kliknij, aby wygenerować</a> link aktywacyjny umożliwiający potwierdzenie adresu e-mail.
                </p>
            {% endif %}

            {% block wrapper %}
                <section class="panel panel-wrapper">
                    <div class="panel-body">
                        {% block content %}{% endblock content %}
                    </div>
                </section>
            {% endblock %}
        </main>
    </div>
{% endblock %}

{% block body %}
    <link rel="stylesheet" property="stylesheet" href="{{ cdn('css/user-panel.css') }}">

    {{ parent() }}
{% endblock %}
